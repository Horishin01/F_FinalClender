@model Pit2Hi022052.ViewModels.BalanceSheetPageViewModel
@using Pit2Hi022052.Models
@using System.Globalization
@using System.ComponentModel.DataAnnotations
@using System.Reflection
@using System.Text.Json
@{
    ViewData["Title"] = "バランスシート";
    var culture = CultureInfo.GetCultureInfo("ja-JP");
    var summary = Model.Summary;
    decimal total = summary.TotalAssets + summary.TotalLiabilities;
    decimal assetPercent = total == 0 ? 0 : Math.Round((summary.TotalAssets / total) * 100m, 1);
    decimal liabilityPercent = summary.DebtRatio.HasValue ? Math.Round(summary.DebtRatio.Value * 100m, 1) : 0;
    string ratioText = summary.DebtRatio?.ToString("P1", culture) ?? "計算不可";

    string GetDisplayName(Enum value)
    {
        var member = value.GetType().GetMember(value.ToString()).FirstOrDefault();
        var display = member?.GetCustomAttribute<DisplayAttribute>();
        return display?.GetName() ?? value.ToString();
    }

    var seed = summary.Assets.Concat(summary.Liabilities).Select(e => new
    {
        id = e.Id,
        name = e.Name,
        amount = e.Amount,
        category = e.Type == BalanceSheetEntryType.Asset ? 0 : 1,
        tag = e.Tag.HasValue ? GetDisplayName(e.Tag.Value) : string.Empty
    });
    var seedJson = JsonSerializer.Serialize(seed);
}

<section class="bs-page">
    <header class="bs-hero glass">
        <div class="bs-hero-copy">
            <p class="eyebrow">資産形成ダッシュボード</p>
            <h1>資産 = 負債 + 純資産 をモニタリング</h1>
            <p>
                行ベースの残高を入力すると合計・純資産・負債比率を自動計算します。ここでの操作はサーバーに保存され、次回以降も継続して編集できます。
            </p>
        </div>
        <div class="bs-hero-summary">
            <div>
                <p>総資産</p>
                <strong>@summary.TotalAssets.ToString("C0", culture)</strong>
            </div>
            <div>
                <p>総負債</p>
                <strong>@summary.TotalLiabilities.ToString("C0", culture)</strong>
            </div>
            <div>
                <p>純資産</p>
                <strong>@summary.NetWorth.ToString("C0", culture)</strong>
            </div>
            <div>
                <p>負債比率</p>
                <strong>@ratioText</strong>
            </div>
        </div>
    </header>

    <div class="glass bs-widget" data-balance-sheet-server>
        <div class="bs-progress">
            <div>
                <small>資産配分</small>
                <div class="bar">
                    <span class="fill" style="width:@assetPercent%;"></span>
                </div>
            </div>
            <div>
                <small>負債比率</small>
                <div class="bar negative">
                    <span class="fill" style="width:@liabilityPercent%;"></span>
                </div>
            </div>
        </div>

        <div class="bs-chart">
            <div class="bs-chart-canvas">
                <canvas data-role="bs-chart" width="520" height="320" aria-label="資産構成チャート"></canvas>
                <button type="button" class="btn ghost small chart-download" data-role="download-chart">
                    <i class="fa-solid fa-download"></i>
                    PNGで保存
                </button>
            </div>
            <div class="bs-detail-panel">
                <div class="bs-detail-tabs" role="tablist">
                    <button type="button" class="detail-tab active" role="tab" aria-selected="true" data-role="detail-toggle" data-detail="assets">
                        資産の詳細
                    </button>
                    <button type="button" class="detail-tab" role="tab" aria-selected="false" data-role="detail-toggle" data-detail="liabilities">
                        負債の詳細
                    </button>
                </div>
                <p class="detail-note">カテゴリ別の構成比を切り替えて確認できます。</p>
                <div class="bs-detail-list" data-role="detail-list">
                    <p class="detail-empty">まだ内訳がありません</p>
                </div>
            </div>
        </div>

        <div class="bs-grid">
            <section>
                <header>
                    <div>
                        <p class="eyebrow">資産</p>
                        <h2>Assets</h2>
                    </div>
                </header>
                <table class="bs-table">
                    <thead>
                        <tr>
                            <th>科目</th>
                            <th>タグ</th>
                            <th class="text-end">金額</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!summary.Assets.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-muted">資産が登録されていません</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var entry in summary.Assets)
                            {
                                <tr>
                                    <td>@entry.Name</td>
                                    <td>@(entry.Tag.HasValue ? GetDisplayName(entry.Tag.Value) : "-")</td>
                                    <td class="text-end">@entry.Amount.ToString("C0", culture)</td>
                                    <td class="text-end">
                                        <form asp-action="Delete" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@entry.Id" />
                                            <button type="submit" class="btn-link danger" title="削除">
                                                <i class="fa-solid fa-xmark"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </section>

            <section>
                <header>
                    <div>
                        <p class="eyebrow">負債</p>
                        <h2>Liabilities</h2>
                    </div>
                </header>
                <table class="bs-table">
                    <thead>
                        <tr>
                            <th>科目</th>
                            <th>タグ</th>
                            <th class="text-end">金額</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!summary.Liabilities.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-muted">負債が登録されていません</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var entry in summary.Liabilities)
                            {
                                <tr>
                                    <td>@entry.Name</td>
                                    <td>@(entry.Tag.HasValue ? GetDisplayName(entry.Tag.Value) : "-")</td>
                                    <td class="text-end">@entry.Amount.ToString("C0", culture)</td>
                                    <td class="text-end">
                                        <form asp-action="Delete" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@entry.Id" />
                                            <button type="submit" class="btn-link danger" title="削除">
                                                <i class="fa-solid fa-xmark"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </section>
        </div>

        <div class="bs-form-wrapper">
            <h3>行を追加</h3>
            @if (TempData["BsMessage"] is string message)
            {
                <div class="alert success">@message</div>
            }
            <form asp-action="Add" method="post" class="bs-form">
                @Html.AntiForgeryToken()
                <div>
                    <label asp-for="EntryInput.Type"></label>
                    <select asp-for="EntryInput.Type" asp-items="Html.GetEnumSelectList<BalanceSheetEntryType>()"></select>
                    <span asp-validation-for="EntryInput.Type" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="EntryInput.Name"></label>
                    <input asp-for="EntryInput.Name" placeholder="例) 投資信託" />
                    <span asp-validation-for="EntryInput.Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="EntryInput.Tag"></label>
                    <select asp-for="EntryInput.Tag" asp-items="Html.GetEnumSelectList<BalanceSheetTag>()"></select>
                    <span asp-validation-for="EntryInput.Tag" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="EntryInput.Amount"></label>
                    <input asp-for="EntryInput.Amount" min="0" step="10000" />
                    <span asp-validation-for="EntryInput.Amount" class="text-danger"></span>
                </div>
                <button type="submit" class="btn primary">
                    <i class="fa-solid fa-plus"></i>
                    追加
                </button>
            </form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>
</section>

<script id="balance-sheet-json" type="application/json">
    @Html.Raw(seedJson)
</script>

@section Styles {
    <link rel="stylesheet" href="~/css/balance-sheet.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/balance-sheet-server.js" asp-append-version="true"></script>
}
