@model Event
@{
    if (Model is null) { throw new NullReferenceException(); }
    ViewData["Title"] = "イベント詳細";
}
<link rel="stylesheet" href="~/css/event-forms.css" asp-append-version="true" />

<div class="page-wrap">
    <div class="details-sheet">
        <div class="sheet-head">
            <div>
                <p class="sheet-sub">イベント詳細</p>
                <div class="sheet-title">@Model.Title</div>
            </div>
            <a asp-action="Index" class="btn btn-secondary">一覧へ戻る</a>
        </div>

        <partial name="_DetailsPartial.cshtml" model="Model" />

        <div class="sheet-actions">
            <a asp-action="Index" class="btn btn-secondary">閉じる</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fa-solid fa-pen-to-square me-1"></i> 編集
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="fa-solid fa-trash-alt me-1"></i> 削除
            </a>
        </div>
    </div>
</div>
