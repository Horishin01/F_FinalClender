@model Event

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="UserId" />

<div class="form-group">
    <label asp-for="Title">タイトル *</label>
    <input asp-for="Title" class="form-control" placeholder="例: 面談練習" required />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="StartDate">開始日時 *</label>
    <input asp-for="StartDate" class="form-control" required />
    <span asp-validation-for="StartDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="EndDate">終了日時</label>
    <input asp-for="EndDate" class="form-control" />
    <small class="hint">未入力の場合は開始日時のみ表示されます。</small>
    <span asp-validation-for="EndDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description">詳細</label>
    <textarea asp-for="Description" class="form-control" rows="4" placeholder="メモやオンライン会議URLなどを記入してください。"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group form-check">
    <input asp-for="AllDay" class="form-check-input" />
    <label asp-for="AllDay" class="form-check-label">終日イベントとして扱う</label>
</div>

<div class="form-group">
    <label asp-for="Source">ソース</label>
    <select asp-for="Source" class="form-control">
        <option value="Local">Local</option>
        <option value="Google">Google</option>
        <option value="ICloud">ICloud</option>
        <option value="Outlook">Outlook</option>
        <option value="Work">Work</option>
    </select>
    <span asp-validation-for="Source" class="text-danger"></span>
    <small class="hint">取り込み元や手動登録の区別に利用します。</small>
</div>

<div class="form-group">
    <label asp-for="Category">カテゴリ</label>
    <select asp-for="Category" class="form-control">
        <option value="Work">仕事・業務</option>
        <option value="Meeting">会議・打ち合わせ</option>
        <option value="Personal">プライベート</option>
        <option value="Deadline">締切・期限</option>
        <option value="Study">学習・勉強</option>
    </select>
    <span asp-validation-for="Category" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Priority">優先度</label>
    <select asp-for="Priority" class="form-control">
        <option value="High">高</option>
        <option value="Normal">通常</option>
        <option value="Low">低</option>
    </select>
    <span asp-validation-for="Priority" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Location">場所</label>
    <input asp-for="Location" class="form-control" placeholder="会議室やオンラインURLなど" />
    <span asp-validation-for="Location" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="AttendeesCsv">参加者（カンマ区切り）</label>
    <input asp-for="AttendeesCsv" class="form-control" placeholder="tanaka@example.com, yamada@example.jp" />
    <span asp-validation-for="AttendeesCsv" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Recurrence">繰り返し</label>
    <select asp-for="Recurrence" class="form-control">
        <option value="None">なし</option>
        <option value="Daily">毎日</option>
        <option value="Weekly">毎週</option>
        <option value="Biweekly">隔週</option>
        <option value="Monthly">毎月</option>
    </select>
    <span asp-validation-for="Recurrence" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ReminderMinutesBefore">リマインダー（分前）</label>
    <input asp-for="ReminderMinutesBefore" class="form-control" type="number" min="0" step="5" />
    <span asp-validation-for="ReminderMinutesBefore" class="text-danger"></span>
    <small class="hint">0以上の値を設定すると通知計算の目安になります（現在は保存のみ）。</small>
</div>
