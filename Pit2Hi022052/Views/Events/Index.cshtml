@{
    ViewData["Title"] = "イベントカレンダー";
}

<section class="calendar-stage">
    <div class="cal-card glass">
        <div class="cal-head">
            <div class="cal-title">
                <span class="cal-icon">
                    <i class="fa-solid fa-calendar-days"></i>
                </span>
                <div>
                    <p class="eyebrow">スケジュール</p>
                    <h1>イベントカレンダー</h1>
                </div>
            </div>

            <div class="controls">
                <div class="month-nav">
                    <button class="btn nav-btn" id="calPrev" aria-label="前の期間">
                        <i class="fa-solid fa-chevron-left"></i>
                    </button>
                    <div class="period" id="calPeriod">----</div>
                    <button class="btn nav-btn" id="calNext" aria-label="次の期間">
                        <i class="fa-solid fa-chevron-right"></i>
                    </button>
                </div>

                <div class="view-toggle" role="group" aria-label="ビュー切替">
                    <button class="view-btn active" id="viewMonth">月</button>
                    <button class="view-btn" id="viewWeek">週</button>
                    <button class="view-btn" id="viewDay">日</button>
                </div>

                <div class="cmd-group">
                    <button class="btn ghost" id="calToday">
                        <i class="fa-solid fa-calendar-day"></i>
                        今日
                    </button>

                    <form id="syncForm" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button id="syncBtn" type="button" class="btn success">
                            <i id="syncIcon" class="fa-solid fa-arrows-rotate"></i>
                            同期
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="fc-wrap">
            <div id="calendar" aria-label="イベントカレンダー本体"></div>
        </div>
    </div>
</section>

<a class="fab" id="fab" href="#" aria-label="新規作成">
    <i class="fa-solid fa-plus"></i>
</a>

@section Styles {
    <link rel="stylesheet" href="~/lib/fullcalendar/main.min.css" />
    <link rel="stylesheet" href="~/css/calendar-ui.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/lib/fullcalendar/index.global.min.js"></script>
    <script src="~/js/locales-all.min.js"></script>
    <script src="~/js/calendar-ui-backend.js" asp-append-version="true"></script>
}
