@{
    ViewData["Title"] = "イベントカレンダー";
}

<div class="cal-card glass">
    <div class="cal-head">
        <div class="cal-title">
            <i class="fc-icon-calendar"></i> イベントカレンダー
        </div>

        <div class="controls">
            <div class="month-nav">
                <button class="btn btn-primary nav-btn" id="calPrev" aria-label="前へ">‹</button>
                <div class="period" id="calPeriod">----</div>
                <button class="btn btn-primary nav-btn" id="calNext" aria-label="次へ">›</button>
            </div>

            <div class="view-toggle">
                <button class="view-btn active" id="viewMonth">月</button>
                <button class="view-btn" id="viewWeek">週</button>
                <button class="view-btn" id="viewDay">日</button>
            </div>

            <div>
                <button class="btn btn-secondary" id="calToday">
                    <i class="fa-solid fa-calendar-day"></i> 今日
                </button>

                <form id="syncForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button id="syncBtn" type="button" class="btn btn-success">
                        <i id="syncIcon" class="fa-solid fa-arrows-rotate"></i> 同期
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="fc-wrap">
        <div id="calendar"></div>
    </div>
</div>

<a class="fab" id="fab" href="#" aria-label="新規作成">＋</a>

@section Styles {
    <!-- FullCalendar をローカルから -->
    <link rel="stylesheet" href="~/lib/fullcalendar/main.min.css" />
    <link rel="stylesheet" href="~/css/calendar-ui.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/lib/fullcalendar/index.global.min.js"></script>
    <script src="~/js/locales-all.min.js"></script>
    <script src="~/js/calendar-ui-backend.js" asp-append-version="true"></script>
}
