@model Event
@{
    if (Model is null) { throw new NullReferenceException(); }
    string FormatDate(DateTime? dt) => dt?.ToString("yyyy-MM-dd HH:mm") ?? "-";
}

<dl class="details-grid">
    <dt>タイトル</dt>
    <dd>@Model.Title</dd>

    <dt>開始時刻</dt>
    <dd>@FormatDate(Model.StartDate)</dd>

    <dt>終了時刻</dt>
    <dd>@FormatDate(Model.EndDate)</dd>

    <dt>種別</dt>
    <dd>@(Model.AllDay ? "終日イベント" : "時間指定")</dd>

    <dt>詳細</dt>
    <dd>@(string.IsNullOrWhiteSpace(Model.Description) ? "（未入力）" : Model.Description)</dd>

    <dt>ユーザーID</dt>
    <dd><span class="details-chip">@Model.UserId</span></dd>

    <dt>UID</dt>
    <dd><span class="details-chip">@(!string.IsNullOrWhiteSpace(Model.UID) ? Model.UID : "未登録")</span></dd>
</dl>
