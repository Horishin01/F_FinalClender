@model Pit2Hi022052.Models.ICloudSetting
@{
    ViewData["Title"] = "iCloud設定登録";
}

<h2>iCloud設定登録</h2>

<form method="post" asp-action="Create">
    <div class="form-group">
        <label for="Username">ユーザー名</label>
        <input type="email" class="form-control" id="Username" name="Username" required />
    </div>
    <div class="form-group mt-2">
        <label for="Password">アプリ専用パスワード</label>
        <input type="text" class="form-control" id="Password" name="Password" placeholder="xxxx-xxxx-xxxx-xxxx" required />
    </div>
    <button type="submit" class="btn btn-success">登録</button>
</form>
<br />
<a asp-action="Index" class="btn btn-secondary">戻る</a>
