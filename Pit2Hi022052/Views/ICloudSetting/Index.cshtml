@model Pit2Hi022052.Models.ICloudSetting
@{
    ViewData["Title"] = "iCloud設定";
}

<h2>iCloud設定</h2>

@if (Model != null)
{
    <div>
        <p><strong>ユーザー名:</strong> @Model.Username</p>
        <p><strong>パスワード:</strong> @Model.Password</p>

        <a asp-action="Edit" class="btn btn-primary">編集</a>
        <form method="post" asp-action="Delete" class="mt-2">
            <button type="submit" class="btn btn-danger">削除</button>
        </form>
    </div>
}
else
{
    <p>iCloud設定は登録されていません。</p>
    <a asp-action="Create" class="btn btn-success">新規登録</a>
}
