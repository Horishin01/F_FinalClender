@model IEnumerable<Pit2Hi022052.Models.CalendarCategory>
@{
    ViewData["Title"] = "カテゴリ一覧";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h4 mb-1">カテゴリ管理</h1>
            <p class="text-muted mb-0">イベントで利用するカテゴリを追加・編集できます（アイコンとカラーも指定可能）。</p>
        </div>
        <a class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-plus"></i> 新規カテゴリ</a>
    </div>

    @if (TempData["Error"] is string err)
    {
        <div class="alert alert-warning">@err</div>
    }

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>名称</th>
                    <th>アイコン</th>
                    <th>カラー</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Name</td>
                        <td><i class="fa-solid @c.Icon"></i> <code class="text-muted">@c.Icon</code></td>
                        <td>
                            <span class="badge" style="background:@c.Color">@c.Color</span>
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">編集</a>
                            <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('削除しますか？');">削除</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
