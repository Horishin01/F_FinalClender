@page
@model IndexModel
@{
    ViewData["Title"] = "プロフィール";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="settings-card">
    <h2>@ViewData["Title"]</h2>
    <p class="settings-description">アカウント名と連絡先電話番号を確認・更新できます。</p>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="profile-form" method="post" class="form-grid">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-field">
            <label asp-for="Username">ユーザー名</label>
            <input asp-for="Username" disabled aria-disabled="true" />
        </div>

        <div class="form-field">
            <label asp-for="Input.PhoneNumber">電話番号</label>
            <input asp-for="Input.PhoneNumber" autocomplete="tel" placeholder="例）080-1234-5678" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button id="update-profile-button" type="submit" class="btn-primary-modern">保存する</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
