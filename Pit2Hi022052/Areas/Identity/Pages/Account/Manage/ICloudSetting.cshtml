@page
@model Pit2Hi022052.Areas.Identity.Pages.Account.Manage.ICloudSettingModel
@using Pit2Hi022052.Areas.Identity.Pages.Account.Manage
@{
    ViewData["Title"] = "iCloud設定";
    ViewData["ActivePage"] = ManageNavPages.ICloudSetting;
}

<h3 class="mb-3">iCloud設定</h3>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}

@if (Model.Setting is not null)
{
    <div class="card mb-4">
        <div class="card-body py-3">
            <dl class="row mb-0">
                <dt class="col-sm-2">ユーザー名</dt>
                <dd class="col-sm-10">@Model.Setting.Username</dd>
                <dt class="col-sm-2">パスワード</dt>
                <dd class="col-sm-10">********</dd>
            </dl>
        </div>
    </div>
}

<form method="post" asp-page-handler="Save">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="row g-3">
        <div class="col-12 col-md-6">
            <label asp-for="Input.Username" class="form-label">ユーザー名</label>
            <input asp-for="Input.Username" class="form-control" autocomplete="username" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-6">
            <label asp-for="Input.Password" class="form-label">パスワード（上書き時に入力）</label>
            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" />
            <div class="form-text">変更しない場合は空のままでOK</div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3 text-end">
        <button class="btn btn-primary me-2" type="submit">更新</button>
        <button class="btn btn-danger" type="submit" formaction="?handler=Delete">削除</button>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
