@page
@model SetPasswordModel
@{
    ViewData["Title"] = "パスワードの設定";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="settings-card">
    <h2>@ViewData["Title"]</h2>
    <p class="settings-description">
        現在このアカウントにはローカルパスワードが設定されていません。外部ログインを使用しなくてもサインインできるよう、新しいパスワードを登録します。
    </p>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="set-password-form" method="post" class="form-grid">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-field">
            <label asp-for="Input.NewPassword">新しいパスワード</label>
            <input asp-for="Input.NewPassword" autocomplete="new-password" />
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>

        <div class="form-field">
            <label asp-for="Input.ConfirmPassword">新しいパスワード（確認）</label>
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-primary-modern">パスワードを設定</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
