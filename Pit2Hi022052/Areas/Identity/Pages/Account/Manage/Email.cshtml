@page
@model EmailModel
@{
    ViewData["Title"] = "メールアドレス";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="settings-card">
    <h2>@ViewData["Title"]</h2>
    <p class="settings-description">サインインや通知に利用するメールアドレスを確認・変更します。</p>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="email-form" method="post" class="form-grid">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

        <div class="form-field">
            <label asp-for="Email">現在のメールアドレス</label>
            <div class="hint-text">
                @if (Model.IsEmailConfirmed)
                {
                    <span class="text-success">確認済み</span>
                }
                else
                {
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn-outline">確認メールを送信</button>
                }
            </div>
            <input asp-for="Email" disabled aria-disabled="true" />
        </div>

        <div class="form-field">
            <label asp-for="Input.NewEmail">新しいメールアドレス</label>
            <input asp-for="Input.NewEmail" autocomplete="email" aria-required="true" placeholder="example@example.com" />
            <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn-primary-modern">メールアドレスを変更</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
