@model string

@if (!string.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error", StringComparison.OrdinalIgnoreCase) ? "danger" : "success";
    <div class="status-toast @statusMessageClass" role="status">
        <span>@Model</span>
        <button type="button" aria-label="閉じる" onclick="this.closest('.status-toast')?.remove()">×</button>
    </div>
}
