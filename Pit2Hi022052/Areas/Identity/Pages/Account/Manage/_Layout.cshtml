@{
    // アカウント管理領域は常に共有レイアウトを親にする
    Layout = "/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account-manage.css" asp-append-version="true" />
    @RenderSection("ManageStyles", required: false)
}

<div class="account-shell">
    <div class="account-header">
        <p class="eyebrow">アカウント設定</p>
        <h1>プロフィールとセキュリティの管理</h1>
        <p>メール、パスワード、2段階認証など、重要な情報をここでまとめて管理できます。</p>
    </div>

    <div class="account-panel">
        <aside class="settings-nav">
            <partial name="_ManageNav" />
        </aside>

        <section class="account-content">
            @RenderBody()
        </section>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
