@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "アカウントの削除";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="settings-card">
    <h2>@ViewData["Title"]</h2>
    <p class="settings-description">アカウントとすべての個人データを完全に削除します。この操作は元に戻せません。</p>

    <div class="danger-zone mb-3">
        <p><strong>削除後はサインインできなくなり、データも復旧できません。</strong></p>
    </div>

    <form id="delete-user" method="post" class="form-grid">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        @if (Model.RequirePassword)
        {
            <div class="form-field">
                <label asp-for="Input.Password">パスワード</label>
                <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }

        <div class="form-actions">
            <button class="btn-primary-modern" type="submit">データを削除して退会する</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
