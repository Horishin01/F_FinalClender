{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Launch (TimeLedger)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: TimeLedger",
      "program": "${workspaceFolder}/bin/Debug/net8.0/TimeLedger.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7052;http://localhost:5016"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "justMyCode": true
    },
    {
      "name": ".NET Attach to dotnet watch",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": true
    }
  ]
}
