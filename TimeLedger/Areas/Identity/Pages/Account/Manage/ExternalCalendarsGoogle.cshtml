@page
@model TimeLedger.Areas.Identity.Pages.Account.Manage.ExternalCalendarsGoogleModel
@using TimeLedger.Areas.Identity.Pages.Account.Manage
@inject TimeLedger.Services.ICalendarTimeZoneService CalendarTimeZone
@{
    ViewData["Title"] = "Google カレンダー連携";
    ViewData["ActivePage"] = ManageNavPages.ExternalCalendarsGoogle;
    var statusClass = Model.Connection.HasError ? "error" : Model.Connection.IsConnected ? "success" : "muted";
    var scopeDisplay = string.IsNullOrWhiteSpace(Model.Connection.Scope) ? Model.DefaultScope : Model.Connection.Scope;
    var timeZoneLabel = CalendarTimeZone.DisplayName;
    var lastSyncedLocal = CalendarTimeZone.FormatUtc(Model.Connection.LastSyncedAtUtc, "yyyy/MM/dd HH:mm");
    var expiresLocal = CalendarTimeZone.FormatUtc(Model.Connection.ExpiresAtUtc, "yyyy/MM/dd HH:mm");
}

<div class="settings-card">
    <h2>@ViewData["Title"]</h2>
    <p class="settings-description">Google Calendar と連携します。現在は管理者のみ操作可能な開発中機能です。</p>

    @if (Model.IsReadOnly)
    {
        <div class="dev-guard">
            <strong>開発中のため、管理者のみ操作できます。</strong>
            <span>閲覧は可能ですが、接続や解除はできません。</span>
        </div>
    }

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="connection-panel">
        <div class="status-pill @statusClass">@Model.Connection.StatusText</div>
        <div class="connection-meta">
            <div>
                <p class="meta-label">連携中アカウント</p>
                <p class="meta-value">@(!string.IsNullOrWhiteSpace(Model.Connection.AccountEmail) ? Model.Connection.AccountEmail : "未登録")</p>
            </div>
            <div>
                <p class="meta-label">最終同期</p>
                <p class="meta-value">@(string.IsNullOrEmpty(lastSyncedLocal) ? "未同期" : lastSyncedLocal)</p>
            </div>
            <div>
                <p class="meta-label">スコープ</p>
                <p class="meta-value">@scopeDisplay</p>
            </div>
            <div>
                <p class="meta-label">有効期限 (@timeZoneLabel)</p>
                <p class="meta-value">@(string.IsNullOrEmpty(expiresLocal) ? "未取得" : expiresLocal)</p>
            </div>
        </div>
    </div>

    <div class="form-actions">
        @if (Model.IsReadOnly)
        {
            <button class="btn-primary-modern" type="button" disabled>Google と連携（管理者専用）</button>
            <button class="btn-outline" type="button" disabled>連携解除</button>
        }
        else
        {
            <a class="btn-primary-modern" href="/auth/google/calendar/connect">Google と連携</a>
            <form method="post" asp-page-handler="Disconnect" class="inline-form" onsubmit="return confirm('Google カレンダーとの連携を解除しますか？');">
                <button class="btn-outline" type="submit" @(Model.Connection.IsConnected ? "" : "disabled")>連携解除</button>
            </form>
        }
    </div>

    @if (!Model.IsOAuthConfigured)
    {
        <div class="hint-text">※ クライアントID/Secret 未設定です。連携が失敗する場合は管理者にキー設定を依頼してください。</div>
    }
</div>

@section ManageStyles {
    <style>
        .connection-panel {
            border: 1px solid #e2e8f0;
            border-radius: 18px;
            padding: 1rem 1.2rem;
            background: linear-gradient(180deg, #ffffff 0%, #f8fbff 100%);
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }
        .status-pill {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.45rem 0.9rem;
            border-radius: 999px;
            font-weight: 700;
            font-size: 0.95rem;
        }
        .status-pill.success {
            background: rgba(16, 185, 129, 0.12);
            color: #047857;
        }
        .status-pill.error {
            background: rgba(239, 68, 68, 0.12);
            color: #b91c1c;
        }
        .status-pill.muted {
            background: rgba(148, 163, 184, 0.16);
            color: #475467;
        }
        .connection-meta {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 0.65rem 1rem;
        }
        .meta-label {
            margin: 0;
            font-size: 0.85rem;
            color: #6b7280;
        }
        .meta-value {
            margin: 0.15rem 0 0;
            font-weight: 700;
            color: #111827;
            word-break: break-all;
        }
        .inline-form {
            display: inline-block;
        }
        .dev-guard {
            border: 1px dashed #cbd5e1;
            background: #f8fafc;
            color: #475569;
            padding: 0.8rem 1rem;
            border-radius: 12px;
            margin-bottom: 0.8rem;
            display: grid;
            gap: 0.2rem;
        }
    </style>
}
