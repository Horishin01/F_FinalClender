@page
@model TimeLedger.Areas.Identity.Pages.Account.Manage.ExternalCalendarsOutlookModel
@using TimeLedger.Areas.Identity.Pages.Account.Manage
@{
    ViewData["Title"] = "Outlook カレンダー連携";
    ViewData["ActivePage"] = ManageNavPages.ExternalCalendarsOutlook;
    var statusClass = Model.Connection.HasError ? "error" : Model.Connection.IsConnected ? "success" : "muted";
    var scopeDisplay = string.IsNullOrWhiteSpace(Model.Connection.Scope) ? Model.DefaultScope : Model.Connection.Scope;
}

<div class="settings-card">
    <h2>@ViewData["Title"]</h2>
    <p class="settings-description">Outlook (Microsoft 365 / Exchange Online) と安全に連携し、OAuth2 で取得したトークンをサーバー側で自動保存します。</p>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="connection-panel">
        <div class="status-pill @statusClass">@Model.Connection.StatusText</div>
        <div class="connection-meta">
            <div>
                <p class="meta-label">連携中アカウント</p>
                <p class="meta-value">@(!string.IsNullOrWhiteSpace(Model.Connection.AccountEmail) ? Model.Connection.AccountEmail : "未登録")</p>
            </div>
            <div>
                <p class="meta-label">最終同期</p>
                <p class="meta-value">@((Model.Connection.LastSyncedAtUtc.HasValue ? Model.Connection.LastSyncedAtUtc.Value.ToString("yyyy/MM/dd HH:mm 'UTC'") : "未同期"))</p>
            </div>
            <div>
                <p class="meta-label">スコープ</p>
                <p class="meta-value">@scopeDisplay</p>
            </div>
            <div>
                <p class="meta-label">有効期限 (UTC)</p>
                <p class="meta-value">@((Model.Connection.ExpiresAtUtc.HasValue ? Model.Connection.ExpiresAtUtc.Value.ToString("yyyy/MM/dd HH:mm 'UTC'") : "未取得"))</p>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <a class="btn-primary-modern" href="/auth/outlook/connect">Outlook と連携</a>
        <form method="post" asp-page-handler="Disconnect" class="inline-form" onsubmit="return confirm('Outlook との連携を解除しますか？');">
            <button class="btn-outline" type="submit" @(Model.Connection.IsConnected ? "" : "disabled")>連携解除</button>
        </form>
    </div>

    @if (!Model.IsOAuthConfigured)
    {
        <div class="hint-text">※ クライアントID/Secret 未設定です。連携が失敗する場合は管理者にキー設定を依頼してください。</div>
    }
</div>

@section ManageStyles {
    <style>
        .connection-panel {
            border: 1px solid #e2e8f0;
            border-radius: 18px;
            padding: 1rem 1.2rem;
            background: linear-gradient(180deg, #ffffff 0%, #f8fbff 100%);
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }
        .status-pill {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.45rem 0.9rem;
            border-radius: 999px;
            font-weight: 700;
            font-size: 0.95rem;
        }
        .status-pill.success {
            background: rgba(16, 185, 129, 0.12);
            color: #047857;
        }
        .status-pill.error {
            background: rgba(239, 68, 68, 0.12);
            color: #b91c1c;
        }
        .status-pill.muted {
            background: rgba(148, 163, 184, 0.16);
            color: #475467;
        }
        .connection-meta {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 0.65rem 1rem;
        }
        .meta-label {
            margin: 0;
            font-size: 0.85rem;
            color: #6b7280;
        }
        .meta-value {
            margin: 0.15rem 0 0;
            font-weight: 700;
            color: #111827;
            word-break: break-all;
        }
        .inline-form {
            display: inline-block;
        }
    </style>
}
