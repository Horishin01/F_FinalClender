@model TimeLedger.Models.AppNotice

<div class="mb-3">
    <label asp-for="Kind" class="form-label">種別</label>
    <select asp-for="Kind" class="form-select">
        <option value="Update">アップデート</option>
        <option value="Incident">障害</option>
    </select>
    <span asp-validation-for="Kind" class="text-danger"></span>
</div>

<div class="row g-3">
    <div class="col-md-4">
        <label asp-for="Version" class="form-label">バージョン</label>
        <input asp-for="Version" class="form-control" placeholder="例: v1.101" />
        <span class="form-text">アップデート時のみ。障害は空欄可。</span>
        <span asp-validation-for="Version" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="OccurredAt" class="form-label">発生日</label>
        <input asp-for="OccurredAt" class="form-control" type="datetime-local" />
        <span asp-validation-for="OccurredAt" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="ResolvedAt" class="form-label">復旧日 (任意)</label>
        <input asp-for="ResolvedAt" class="form-control" type="datetime-local" />
        <span asp-validation-for="ResolvedAt" class="text-danger"></span>
    </div>
</div>

<div class="mb-3 mt-3">
    <label asp-for="Status" class="form-label">ステータス (任意)</label>
    <input asp-for="Status" class="form-control" placeholder="例: 復旧済み / 対応中" />
    <span asp-validation-for="Status" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Title" class="form-label">タイトル</label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Description" class="form-label">説明</label>
    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Highlights" class="form-label">箇条書き (改行区切り)</label>
    <textarea asp-for="Highlights" class="form-control" rows="4" placeholder="1行につき1項目を入力してください。"></textarea>
    <span asp-validation-for="Highlights" class="text-danger"></span>
</div>
