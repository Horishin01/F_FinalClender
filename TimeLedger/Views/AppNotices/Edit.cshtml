@model TimeLedger.Models.AppNotice
@{
    ViewData["Title"] = "アップデート / 障害の編集";
    ViewData["BodyClass"] = "admin-portal";
}

<div class="container-xl">
    <h1 class="hero-title mb-3">アップデート / 障害の編集</h1>
    <form asp-action="Edit" method="post" class="card p-3 shadow-sm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <partial name="_Form" />
        <div class="d-flex justify-content-between mt-3">
            <a class="btn btn-outline-secondary" asp-action="Index">一覧へ戻る</a>
            <button type="submit" class="btn btn-primary">更新</button>
        </div>
    </form>
</div>
