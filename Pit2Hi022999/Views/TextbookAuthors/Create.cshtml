@model TextbookAuthor

@{
    if (!(Model is not null)) { throw new NullReferenceException(); }
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Textbook</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TextbookId" class="control-label"></label>
                <select class="form-select" asp-for="TextbookId" asp-items="ViewBag.TextbookId" autofocus></select>
                <p><span asp-validation-for="TextbookId" class="text-danger"></span>&nbsp;</p>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select class="form-select" asp-for="AuthorId" asp-items="ViewBag.AuthorId"></select>
                <p><span asp-validation-for="AuthorId" class="text-danger"></span>&nbsp;</p>
            </div>
            <partial name="_EditPartial.cshtml" />


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
