@model Textbook

@{
	if (!(Model is not null)) { throw new NullReferenceException(); }	// Ad-hoc
}

<div class="form-group">
	<label asp-for="Name" class="control-label"></label>
	<input asp-for="Name" class="form-control" autofocus />
	<span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="Price" class="control-label"></label>
	<input asp-for="Price" class="form-control" />
	<span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
	<label class="control-label" asp-for="PublisherId"></label>
	<select class="form-control" asp-for="PublisherId" asp-items="ViewBag.PublisherId"></select>
	<p>
		<span class="text-danger" asp-validation-for="PublisherId">
		</span>&nbsp;
	</p>
</div>

