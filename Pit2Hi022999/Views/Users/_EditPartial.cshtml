@model UsersController.InputModel

@{
    if (!(Model is not null)) { throw new NullReferenceException(); }
}

<div class="form-group">
    <label asp-for="UserName" class="control-label"></label>
    <input asp-for="UserName" class="form-control input" autofocus/>
    <p><span asp-validation-for="UserName" class="text-danger"></span>&nbsp;</p>
</div>

<div class="form-group">
    <label asp-for="Email" class="control-label"></label>
    <input asp-for="Email" class="form-control input" />
    <p><span asp-validation-for="Email" class="text-danger"></span>&nbsp;</p>
</div>

<div class="form-group">
    <input asp-for="EmailConfirmed" class="form-check-input" />
    <label asp-for="EmailConfirmed" class="form-check-label"></label>
    <p><span asp-validation-for="EmailConfirmed" class="text-danger"></span>&nbsp;</p>
</div>
